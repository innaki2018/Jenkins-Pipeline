pipeline {

  agent any

  stages {
    
    stage('Run') {
      steps {
        sh "echo 'Hello word'"
      }
    }
    
    stage('Build') {
      steps {
        sh "date >! /home/innaki/tmp/jenkins_was_here"
      }  
    }
  }

  post {
    failure {
